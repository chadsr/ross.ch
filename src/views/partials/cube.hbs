            <section class="content">
                <h1>Ross Chadwick</h1>
                {{> about}}
            </section>
        </div>
        <div id="projects" class="face face-right">
            <section class="content">
                <h2>Projects</h2>
                {{> projects}}
            </section>
        </div>
        <div id="blog" class="face face-back">
            <section class="content">
