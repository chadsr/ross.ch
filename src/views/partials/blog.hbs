{{#if blogPosts}}
    <ul class="blog-feed feed">
        {{#each blogPosts}}
            <li class="feed-item blog-post field hover perspective">
                <a href="{{ url }}" rel="noopener" target="_blank">
                    <div class="blog-post-title title perspective">
                        <h3>{{ title }}</h3>
                    </div>
                    <span class="blog-post-date">Published:
                        {{ publishDate }}</span>
                    <div class="blog-post-tags">
                        {{#each tags}}
                            <span class="blog-post-tag">{{ this }}</span>
                        {{/each}}
                    </div>
                    <div class="feed-item-content blog-post-content">
                        <p class="blog-post-snippet">{{ contentSnippet }}</p>
                    </div>
                </a>
            </li>
        {{/each}}
    </ul>
{{ else }}
    <p>Looks like there are no posts right now. :(</p>
{{/if}}
