{{#if githubRepos}}
    <ul class="repo-feed feed">
        {{#each githubRepos}}
            <li class="feed-item repo field hover perspective">
                <a href="{{url}}" rel="noopener" target="_blank">
                    <div class="repo-title title perspective">
                        <h3>{{name}}</h3>
                    </div>
                    <span class="repo-updated-date">Updated: {{updatedAt}}</span>
                    <div class="repo-stats">
                        {{#each languages}}
                            <span class="repo-language">{{name}}</span>
                        {{/each}} 
                        <span class="repo-stars">{{stargazersCount}}</span>
                    </div>
                    <div class="feed-item-content repo-content">
                        <p class="repo-description">{{description}}</p>
                    </div>
                </a>
            </li>
        {{/each}}
    </ul>
{{else}}
    <h3>Something went wrong and I couldn't fetch and projects. Try later, or checkout my Github (link in footer)</h3>
{{/if}}
