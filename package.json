{
    "name": "ross.ch",
    "version": "2.0.0",
    "description": "ross.ch website",
    "private": true,
    "type": "module",
    "scripts": {
        "build": "hugo --minify",
        "lint": "eslint . && stylelint **/*.scss",
        "format": "eslint --fix . && stylelint --fix **/*.scss",
        "prepare": "husky",
        "dev": "hugo --logLevel debug server",
        "dev-host": "hugo --logLevel debug server --bind 0.0.0.0",
        "test": "vitest",
        "coverage": "vitest run --coverage",
        "cf-deploy": "wrangler deploy",
        "cf-dev": "wrangler pages dev",
        "cf-typegen": "wrangler types functions/worker-configuration.d.ts"
    },
    "keywords": [],
    "author": "Ross Chadwick",
    "license": "GPL-3.0-only",
    "browserslist": [
        "defaults",
        "iOS >= 14",
        "ChromeAndroid >= 119"
    ],
    "devDependencies": {
        "@cloudflare/vitest-pool-workers": "^0.8.0",
        "@cloudflare/workers-types": "^4.20250313.0",
        "@eslint/js": "^9.21.0",
        "@fontsource-variable/space-grotesk": "^5.2.6",
        "@fullhuman/postcss-purgecss": "^7.0.2",
        "@openpgp/web-stream-tools": "^0.1.3",
        "autoprefixer": "^10.4.21",
        "eslint": "^9.22.0",
        "eslint-config-prettier": "^10.1.1",
        "eslint-plugin-prettier": "^5.2.3",
        "husky": "^9.1.7",
        "postcss": "^8.5.3",
        "postcss-calc": "^10.1.1",
        "postcss-cli": "^11.0.1",
        "postcss-preset-env": "^10.1.5",
        "postcss-scss": "^4.0.9",
        "prettier": "^3.5.3",
        "resend": "^4.1.2",
        "stylelint": "^16.16.0",
        "stylelint-config-standard-scss": "^14.0.0",
        "stylelint-prettier": "^5.0.3",
        "stylelint-scss": "^6.11.1",
        "typescript": "^5.8.2",
        "typescript-eslint": "^8.29.0",
        "vitest": "^3.0.8",
        "wrangler": "^4.0.0"
    },
    "dependencies": {
        "axios": "^1.8.3",
        "openpgp": "^6.1.0"
    }
}
