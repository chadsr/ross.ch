{
    "name": "ross.ch",
    "version": "2.0.0",
    "description": "ross.ch website",
    "private": true,
    "type": "module",
    "scripts": {
        "build": "hugo --minify",
        "lint": "eslint . && stylelint **/*.scss",
        "format": "eslint --fix . && stylelint --fix **/*.scss",
        "prepare": "husky",
        "dev": "hugo --logLevel debug server --ignoreCache --disableFastRender",
        "dev-host": "hugo --logLevel debug server --ignoreCache --disableFastRender --bind 0.0.0.0",
        "test": "vitest",
        "coverage": "vitest run --coverage",
        "cf-deploy": "wrangler deploy",
        "cf-dev": "wrangler pages dev",
        "cf-typegen": "wrangler types functions/worker-configuration.d.ts",
        "deploy-fleek": "fleek sites deploy"
    },
    "keywords": [],
    "author": "Ross Chadwick",
    "license": "GPL-3.0-only",
    "browserslist": [
        "defaults",
        "iOS >= 14",
        "ChromeAndroid >= 119"
    ],
    "devDependencies": {
        "@cloudflare/vitest-pool-workers": "^0.8.53",
        "@cloudflare/workers-types": "^4.20250810.0",
        "@eslint/js": "^9.31.0",
        "@fontsource-variable/space-grotesk": "^5.2.8",
        "@fullhuman/postcss-purgecss": "^7.0.2",
        "@openpgp/web-stream-tools": "^0.1.3",
        "autoprefixer": "^10.4.21",
        "eslint": "^9.33.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "husky": "^9.1.7",
        "postcss": "^8.5.4",
        "postcss-calc": "^10.1.1",
        "postcss-cli": "^11.0.1",
        "postcss-preset-env": "^10.2.4",
        "postcss-scss": "^4.0.9",
        "prettier": "^3.6.2",
        "resend": "^6.0.1",
        "stylelint": "^16.23.1",
        "stylelint-config-standard-scss": "^15.0.1",
        "stylelint-prettier": "^5.0.3",
        "stylelint-scss": "^6.12.1",
        "typescript": "^5.9.2",
        "typescript-eslint": "^8.39.1",
        "vitest": "^3.2.4",
        "wrangler": "^4.27.0"
    },
    "dependencies": {
        "axios": "^1.11.0",
        "openpgp": "^6.2.0"
    }
}
