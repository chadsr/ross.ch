{
    "name": "ross.ch",
    "version": "0.1.0",
    "description": "ross.ch website",
    "main": "dist/src/server.js",
    "author": "Ross Chadwick",
    "sideEffects": false,
    "private": true,
    "scripts": {
        "dev": "NODE_ENV=development nodemon --watch '*' -e ts,tsx --exec ./node_modules/.bin/ts-node src/server.ts",
        "lint": "./node_modules/.bin/eslint src/**/* --ext .js,.jsx,.ts,.tsx",
        "lint-fix": "./node_modules/.bin/prettier-eslint --write 'src/**/*.{.js,.jsx,.ts,.tsx}'",
        "docs": "./node_modules/.bin/typedoc ./src",
        "webpack-dev": "./node_modules/.bin/webpack serve --progress --config webpack/webpack.dev.ts",
        "webpack-prod": "./node_modules/.bin/webpack --progress --config webpack/webpack.prod.ts",
        "build": "./node_modules/.bin/tsc -p tsconfig.prod.json && yarn run webpack-prod",
        "start": "node dist/src/server.js"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "yarn run lint-fix"
        ]
    },
